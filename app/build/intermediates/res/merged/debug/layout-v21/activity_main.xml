<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Select Day"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#ffffff" />

            <DatePicker
                android:id="@+id/pickerdate"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:headerBackground="#d30606"
                android:background="#d29898"
                android:datePickerMode="calendar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Select Start Time"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#ffffff" />

            <TimePicker
                android:id="@+id/pickertime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#76b68d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Choose Mode"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/setvibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Vibrate"
                android:textColor="#ffffff"
                android:background="#959595"
                android:textStyle="bold" />
            <Button
                android:id="@+id/setsilent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Silent"
                android:background="#959595"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/button"
                android:onClick="second"
                android:background="#959595"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
